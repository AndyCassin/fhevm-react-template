{
  "name": "fhevm-sdk-template",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK with Next.js examples - Framework-agnostic encryption for confidential frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk && npm run build:examples",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:examples": "npm run build:nextjs && npm run build:patent",
    "build:nextjs": "cd examples/nextjs-example && npm run build",
    "build:patent": "cd examples/patent-license && npm run compile",
    "dev:sdk": "cd packages/fhevm-sdk && npm run dev",
    "dev:nextjs": "cd examples/nextjs-example && npm run dev",
    "dev:patent": "cd examples/patent-license && npm start",
    "test": "npm run test:sdk",
    "test:sdk": "cd packages/fhevm-sdk && npm test",
    "test:examples": "cd examples/patent-license && npm test",
    "lint": "npm run lint:sdk && npm run lint:examples",
    "lint:sdk": "cd packages/fhevm-sdk && npm run lint",
    "lint:examples": "cd examples/nextjs-example && npm run lint",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist examples/*/dist examples/*/.next",
    "install:all": "npm install && npm run postinstall",
    "postinstall": "npm run build:sdk",
    "deploy:nextjs": "cd examples/nextjs-example && vercel deploy --prod",
    "deploy:patent": "cd examples/patent-license && npm run deploy",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "blockchain",
    "ethereum",
    "web3",
    "privacy",
    "sdk",
    "nextjs",
    "react",
    "zama",
    "confidential",
    "framework-agnostic"
  ],
  "author": "FHEVM Contributors",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fhevm-sdk-template.git"
  }
}
